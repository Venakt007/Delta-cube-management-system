{
  "name": "recruitment-management-system",
  "version": "1.0.0",
  "description": "AI-Powered Resume Management System",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "create-admin": "node scripts/createAdmin.js",
    "migrate": "node run-migration.js && node run-field-migration.js",
    "setup": "npm install && cd client && npm install && cd ..",
    "dev-all": "concurrently \"npm run dev\" \"npm run client\"",
    "production": "npm run build && npm start"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.41.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "form-data": "^4.0.4",
    "jsonwebtoken": "^9.0.2",
    "mammoth": "^1.6.0",
    "multer": "^1.4.5-lts.1",
    "multer-storage-cloudinary": "^4.0.0",
    "pdf-parse": "^1.1.1",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2"
  }
}
